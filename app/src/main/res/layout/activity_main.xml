<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:stretchColumns="*"
   >
    <TableRow
        android:layout_marginBottom="8dp">
        <TextView
            android:text="Row1"
            android:layout_span="3"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            />
    </TableRow>

    <TableRow
        android:layout_marginBottom="8dp">
        <TextView android:text="Row2-col1"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>
        <TextView android:layout_span="2" android:text="Row2-col2"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>
    </TableRow>
    <TableRow
        android:layout_marginBottom="8dp">
        <TextView android:text="Row3-Col1"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>
        <TextView android:text="Row3-Col2"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>
        <TextView android:text="Row3-Col3"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>
    </TableRow>
    <TableRow    android:layout_marginBottom="8dp">
        <TextView
            android:text="Row4"
            android:layout_span="3"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"/>
    </TableRow>
    <TableRow>
        <Spinner
            android:id="@+id/spinner_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </TableRow>
    <TableRow>
        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </TableRow>
    </TableLayout>

